<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.mixa201.physics.Laucher">

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Тесты"
            android:id="@+id/btT"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Учебник"
            android:id="@+id/btL"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/btQ"
            android:layout_alignStart="@+id/btQ" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Задачник"
            android:id="@+id/btQ"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/space"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Управление"
            android:id="@+id/btC"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/space3"
            android:layout_alignLeft="@+id/btL"
            android:layout_alignStart="@+id/btL" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/tests"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/book"
        android:layout_below="@+id/space"
        android:layout_toLeftOf="@+id/btL"
        android:layout_toStartOf="@+id/btL" />

    <Space
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/btQ"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/questionary"
        android:layout_below="@+id/space2"
        android:layout_toLeftOf="@+id/btT"
        android:layout_toStartOf="@+id/btT" />

    <Space
        android:layout_width="1dp"
        android:layout_height="2dp"
        android:layout_below="@+id/btL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/settings"
        android:layout_below="@+id/space3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivE"
        android:src="@drawable/electricity"
        android:layout_below="@+id/btC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
